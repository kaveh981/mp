@model MapiOnline.Models.RegisterModel
@{
    ViewBag.Title = "اطلاعات فرستنده";
    Layout = "~/Views/Shared/_FirstLayoutNew2.fa-ir.cshtml";
}
<script>
    $(document).ready(function () {

        $("#State").unbind().change(function () {
            BindProvinceCities("AddressId", "AddressId", $('#State').val());
        });

        
    });
</script>
<link href="../../Content/template/assets/css/BootstrapValidator.css" rel="stylesheet"
    type="text/css" />
<h2>
    CheckOut</h2>
<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">خانه</a> </li>
                <li><a href="@Url.Action("ShoppingCart", "Shopping")">سبد خرید</a> </li>
                <li class="active">اطلاعات فرستنده </li>
            </ul>
        </div>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7">
            <h1 class="section-title-inner">
                <span><i class="glyphicon glyphicon-shopping-cart"></i>&nbsp;اتمام خرید &nbsp;</span></h1>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar">
            <h4 class="caps">
                <a href="@Url.Action("Category", "Home")"><i class="fa fa-chevron-right"></i>&nbsp;ادامه
                    خرید&nbsp; </a>
            </h4>
        </div>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12">
            <div class="row userInfo">
                <div class="col-xs-12 col-sm-12">
                    <div class="w100 clearfix">
                        <ul class="orderStep ">
                            <li class="active"><a step="1" href="@Url.Action("CheckOut_step1", "Tshop")"><i class="fa fa-map-marker ">
                            </i><span>سفارش دهنده</span> </a></li>
                            <li><a step="2" href="@Url.Action("CheckOut_step2", "Tshop")"><i class="fa fa fa-envelope  ">
                            </i><span>تحویل گیرنده </span></a></li>
                            <li><a step="3" href="@Url.Action("CheckOut_step3", "Tshop")"><i class="fa fa-truck ">
                            </i><span>نحوه ارسال</span> </a></li>
                            <li><a step="4" href="@Url.Action("CheckOut_step4", "Tshop")"><i class="fa fa-money  ">
                            </i><span>پرداخت</span> </a></li>
                            <li><a step="5" href="@Url.Action("CheckOut_step4", "Tshop")"><i class="fa fa-check-square ">
                            </i><span>اتمام خرید</span></a> </li>
                        </ul>
                        <!--/.orderStep end-->
                    </div>
                    @using (Ajax.BeginForm("CheckOut_step1", "Tshop", FormMethod.Post, new AjaxOptions
                            {

                                OnBegin = "loadingStart();",
                                OnComplete = "loadingEnd();",
                                HttpMethod = "POST",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "error"
                            }, new { @id = "step1" }))
                    {
                        <div class="w100 clearfix">
                            <div class="row userInfo">
                                <div class="col-lg-12">
                                 <div class="no-border">
                                        <p class="promo-1">
                                            <strong>  اطلاعات فرستنده (شما) - خريدار </strong>
                                        </p>
                                    </div>
                                
                                    <p class="required">
                                        <sup>*</sup> فیلدهای ضروری</p>
                                </div>
                                @Html.ValidationSummary(true)
                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group required">
                                        @Html.LabelFor(model => model.Name)
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group required">
                                        <label for="Family">
                                            نام خانوادگی <sup>*</sup>
                                        </label>
                                        @Html.TextBoxFor(model => model.Family, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(model => model.Gender)
                                        @Html.DropDownList("Gender", null, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(model => model.Phone)
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group required">
                                        <label for="Mobile">
                                            شماره موبایل <sup>*</sup>
                                        </label>
                                        @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group required">
                                        @Html.LabelFor(model => model.email)
                                        @Html.TextBoxFor(model => model.email, new {@type="email", @class = "form-control" })
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(model => model.State)
                                        @Html.DropDownList("StateId", null, new { @id = "State", @class = "form-control" })
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(model => model.AddressId)
                                        @Html.DropDownList("AddressId", null, new { @id = "AddressId", @class = "form-control" })
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(model => model.AddressStr)
                                        @Html.TextBoxFor(model => model.AddressStr, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(model => model.PostalCode)
                                        @Html.TextBoxFor(model => model.PostalCode, new { @class = "form-control" })
                                    </div>
                                    @* <p>
                                            <input type="submit" value="Create" />
                                        </p>*@
                                </div>
                            </div>
                            <!--/row end-->
                        </div>
                        <div class="cartFooter w100">
                            <div class="box-footer">
                                <div class="pull-left">
                                    <a class="btn btn-default" href="@Url.Action("Index", "Home")"><i class="fa fa-arrow-right">
                                    </i>&nbsp;ادامه خرید&nbsp; </a>
                                </div>
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-primary btn-small">
                                        آدرس ارسال &nbsp; <i class="fa fa-arrow-circle-left"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                    <!--/ cartFooter -->
                </div>
            </div>
            <!--/row end-->
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12 rightSidebar">
            <div class="w100 cartMiniTable">
                <table id="cart-summary" class="std table">
                    <tbody>
                                            <tr>
                                                <td>
                                                    تعداد کل
                                                </td>
                                                <td class="price">
                                                    <span id="itemCatrQuantity"></span>&nbsp;عدد
                                                </td>
                                            </tr>
                                            <tr class="cart-total-price ">
                                                <td>
                                                    جمع خرید
                                                </td>
                                                <td class="price" name="totalAmount">
                                                    <span id="totalAmount"></span>&nbsp;تومان
                                                </td>
                                            </tr>
                                            <tr style="">
                                                <td>
                                                    هزینه حمل
                                                </td>
                                                <td class="price">
                                                    <span class="success" id="sendExpense" name="sendExpense"></span>&nbsp;تومان
                                                </td>
                                            </tr>
                                            <tr style="">
                                                <td>
                                                    تخفیف
                                                </td>
                                                <td class="price">
                                                    <span class="success" id="orderDiscount" name="sendExpense"></span>&nbsp;تومان
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    جمع کل
                                                </td>
                                                <td class=" site-color" name="total-price">
                                                    <span id="total-price">0</span>&nbsp;تومان
                                                </td>
                                            </tr>
                                        </tbody>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!--  /cartMiniTable-->
        </div>
        <!--/rightSidebar-->
    </div>
    <!--/row-->

    <script>
        $(document).ready(function () {
            $('#step1').bootstrapValidator({
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                fields: {
                    Family: {
                        feedbackIcons: true,
                        validators: {
                            notEmpty: {
                                message: 'نام خانوادگی ضروری است'
                            }
                        }
                    },

                    Mobile: {
                        feedbackIcons: true,
                        validators: {
                            notEmpty: {
                                message: 'شماره همراه ضروری می باشد'
                            }
                        }
                    }
                }
            });
        });
    </script>
    <div style="clear: both">
    </div>
</div>
<!-- /.main-container-->
<div class="gap">
</div>
