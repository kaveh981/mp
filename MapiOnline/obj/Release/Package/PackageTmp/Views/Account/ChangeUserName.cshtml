@model MapiOnline.Models.ChangeUsername
@{
    ViewBag.Title = "تغییر ایمیل";
}
<div class="header">
    <div class="dots">
        <h2>
            تغییر ایمیل
        </h2>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="unitRight">
    @using (Html.BeginForm(new
    {
        categoryId = Request["categoryId"],
        isNew = Request["isNew"],
        isOffer = Request["isOffer"],
        isSale = Request["isSale"]
    }))
    {
        @Html.ValidationSummary(true)
        <ul class="cleaner">
            <li class="unitRight labelParentli80">
                @Html.LabelFor(model => model.Password)
            </li>
            <li class="unitRight inputParentli">
                @Html.PasswordFor(model => model.Password, new { @class = "usernameInput" })
            </li>
            <li class="unitRight"></li>
        </ul>
        <ul class="cleaner">
            <li class="unitRight validationMsgli">
                @Html.ValidationMessageFor(model => model.Password)
            </li>
        </ul>
        <ul class="cleaner">
            <li class="unitRight labelParentli80">
                @Html.LabelFor(model => model.NewEmail)
            </li>
            <li class="unitRight inputParentli">
                @Html.TextBoxFor(model => model.NewEmail, new { @class = "usernameInput" })
            </li>
            <li class="unitRight"></li>
        </ul>
        <ul class="cleaner">
            <li class="unitRight validationMsgli">
                @Html.ValidationMessageFor(model => model.NewEmail)</li>
        </ul>
        <ul class="cleaner">
            <li class="unitRight labelParentli80">
                @Html.LabelFor(model => model.ConfirmNewEmail)
            </li>
            <li class="unitRight inputParentli">
                @Html.TextBoxFor(model => model.ConfirmNewEmail, new { @class = "usernameInput" })
            </li>
            <li class="unitRight"></li>
        </ul>
        <ul class="cleaner">
            <li class="unitRight validationMsgli">
                @Html.ValidationMessageFor(model => model.ConfirmNewEmail)</li>
        </ul>
        <ul class="cleaner">
            <li class="unitRight buttonParentli">
                <input type="submit" value="ثبت" class="submitBtn btn btn-success" /></li>
        </ul>
    }
</div>
<div class="cleaner" style="float: left;">
    @Html.ActionLink("بازگشت به صفحه شخصی", "Profile")
</div>
