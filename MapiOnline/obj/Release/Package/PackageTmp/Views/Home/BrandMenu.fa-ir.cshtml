<div dir="ltr" class="width100 section-block">
    <h3 class="section-title">
        <span>@Model.FirstOrDefault().inv_Property2.Property</span> <a id="nextBrand" class="link pull-right carousel-nav">
            <i class="fa fa-angle-left"></i></a><a id="prevBrand" class="link pull-right carousel-nav">
                <i class="fa fa-angle-right"></i></a>
    </h3>
    <div class="row">
        <div class="col-lg-12">
            <ul class="no-margin brand-carousel owl-carousel owl-theme">
                @{
                    int count = 0;
                    string bc = "#a3ba0a";
                    foreach (var item in Model)
                    {
                        count++;
                        if (count > 5)
                        {
                            count = 0;
                        }
                        bc = count == 1 ? "#a3ba0a" : count == 2 ? "#e461b7" : count == 3 ? "#e20a28" : count == 4 ? "#df980e" : count == 5 ? "#985ed3" : "";
                    <li><a href="@Url.Action("Category", "Home", new { property = @item.PropertyId, name = @item.Property })"  style=" width:185px; font-size:20px; background-color:@bc" class="btn btn-warning">@item.Property</a></li>
                    }
                }
            </ul>
        </div>
    </div>
    <!--/.row-->
</div>
