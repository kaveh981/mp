@{
    ViewBag.Title = "پرداخت";
    Layout = "~/Views/Shared/_FirstLayoutNew2.fa-ir.cshtml";
}
<!-- /.Fixed navbar  -->
<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">خانه</a> </li>
                <li><a href="@Url.Action("ShoppingCart", "Shopping")">سبد خرید</a> </li>
                <li class="active">پرداخت </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7">
            <h1 class="section-title-inner">
                <span><i class="glyphicon glyphicon-shopping-cart"></i>&nbsp;اتمام خرید &nbsp;</span></h1>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar">
            <h4 class="caps">
                <a href="@Url.Action("Category", "Home")"><i class="fa fa-chevron-right"></i>&nbsp;ادامه
                    خرید&nbsp; </a>
            </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12">
            <div class="row userInfo">
                <div class="col-xs-12 col-sm-12">
                    <div class="w100 clearfix">
                        <ul class="orderStep ">
                            <li><a step="1" href="@Url.Action("CheckOut_step1", "Tshop")"><i class="fa fa-map-marker ">
                            </i><span>سفارش دهنده</span> </a></li>
                            <li><a step="2" href="@Url.Action("CheckOut_step2", "Tshop")"><i class="fa fa fa-envelope  ">
                            </i><span>تحویل گیرنده </span></a></li>
                            <li><a step="3" href="@Url.Action("CheckOut_step3", "Tshop")"><i class="fa fa-truck ">
                            </i><span>نحوه ارسال</span> </a></li>
                            <li class="active"><a step="4" href="@Url.Action("CheckOut_step4", "Tshop")"><i class="fa fa-money  ">
                            </i><span>پرداخت</span> </a></li>
                            <li><a step="5" href="@Url.Action("CheckOut_step5", "Tshop")"><i class="fa fa-check-square ">
                            </i><span>اتمام خرید</span></a> </li>
                        </ul>
                        <!--orderStep-->
                    </div>
                    <div class="w100 clearfix">
                        <div class="row userInfo">
                            <div class="col-lg-12">
                                <div class="no-border">
                                    <p class="promo-1">
                                        <strong>الطفا روش پرداخت مورد نظر خود را انتخاب کنید.</strong>
                                    </p>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12">
                                <div class="paymentBox">
                                    <div class="panel-group paymentMethod" id="accordion">
                                        <div class="panel panel-default">
                                            <div class="panel-heading panel-heading-custom">
                                                <h4 class="panel-title">
                                                    <a class="masterCard" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                                                        <span class="numberCircuil">روش 1</span> <strong>پرداخت آنلاین </strong></a>
                                                </h4>
                                            </div>
                                            <div id="collapseThree" class="panel-collapse collapse in">
                                                <div class="panel-body">
                                                    <p>
                                                        با کلیک گزینه 'سفارش' به صفحه پرداخت اینترنتی وارد می شوید(پرداخت با کلیه کارتهای
                                                        عضو شتاب مقدور میباشد)</p>
                                                    <br>
                                                    @using (Ajax.BeginForm("CheckOut_step4", "Tshop", new AjaxOptions
                            {
                                OnBegin = "loadingStart();",
                                OnComplete = "loadingEnd();",
                                HttpMethod = "POST",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "error"
                            }))
                                                    {
                                                        <input name="PaymentMethod" value="1" type="hidden" />
                                                        <div class="form-group clearfix">
                                                            <label class="checkbox-inline" for="checkboxes-0">
                                                                <input name="accepted" checked type="checkbox">
                                                                <a data-toggle="modal" data-dismiss="modal" href="#termsNcondition">قوانین و مقررات
                                                                </a>را مطالعه نموده و با آن موافق هستم
                                                            </label>
                                                        </div>
                                                        <div class="panel open">
                                                            <!--creditCard-->
                                                            <div class="pull-right">
                                                                <button class="btn btn-primary btn-small ">
                                                                    سفارش &nbsp; <i class="fa fa-arrow-circle-left"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="panel panel-default">
                                            <div class="panel-heading panel-heading-custom">
                                                <h4 class="panel-title">
                                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo"><span class="numberCircuil">
                                                        روش 2</span><strong> پرداخت به شماره کارت اعتباری</strong> </a>
                                                </h4>
                                            </div>
                                            <div id="collapseTwo" class="panel-collapse collapse">
                                                @using (Ajax.BeginForm("CheckOut_step4", "Tshop", new AjaxOptions
                        {
                            OnBegin = "loadingStart();",
                            OnComplete = "loadingEnd();",
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "error"
                        }))
                                                {
             
                                                    <div class="panel-body">
                                                        <p>
                                                            با کلیک گزینه 'سفارش' سفارش شما ثبت شده و می توانید هزینه را به شماره کارت 6104337226650370
                                                            بانک ملت و یا شماره کارت 6037991489604839 بانک ملی به نام سمیه بذرافکن پرداخت نمایید.
                                                            پس از پرداخت وجه به کارت، مبلغ پرداخت شده و شماره پیگیری را به همراه شماره فاکتور
                                                            به شماره 09178535399 پیامک دهید.</p>
                                                        <br>
                                                        <input name="PaymentMethod" value="3" type="hidden" />
                                                        <div class="form-group">
                                                            <label for="CommentsOrder2">
                                                                توضیحات تکمیلی سفارش</label>
                                                            <textarea id="CommentsOrder2" class="form-control" name="CommentsOrder" cols="26"
                                                                rows="3"></textarea>
                                                        </div>
                                                        <div class="form-group clearfix">
                                                            <label class="checkbox-inline" for="checkboxes-0">
                                                                <input name="accepted" checked type="checkbox">
                                                                <a data-toggle="modal" data-dismiss="modal" href="#termsNcondition">قوانین و مقررات
                                                                </a>را مطالعه نموده و با آن موافق هستم
                                                            </label>
                                                        </div>
                                                        <div class="pull-right">
                                                            <button class="btn btn-primary btn-small ">
                                                                سفارش &nbsp; <i class="fa fa-arrow-circle-left"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="panel panel-default">
                                            <div class="panel-heading panel-heading-custom">
                                                <h4 class="panel-title">
                                                    <a class="cashOnDelivery" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                                        <span class="numberCircuil">روش 3</span> <strong>پرداخت به پیک همزمان با تحویل کالا</strong>
                                                    </a>
                                                </h4>
                                            </div>
                                            <div id="collapseOne" class="panel-collapse collapse ">
                                                @using (Ajax.BeginForm("CheckOut_step4", "Tshop", new AjaxOptions
                      {
                          OnBegin = "loadingStart();",
                          OnComplete = "loadingEnd();",
                          HttpMethod = "POST",
                          InsertionMode = InsertionMode.Replace,
                          UpdateTargetId = "error"
                      }))
                                                {
                                                    <div class="panel-body">
                                                        <p>
                                                            با کلیک گزینه 'سفارش' سفارش شما ثبت شده و می توانید همزمان با تحویل کالا هزینه را
                                                            به پیک پرداخت نمایید.</p>
                                                        <br>
                                                        <input name="PaymentMethod" value="2" type="hidden" />
                                                        <div class="form-group">
                                                            <label for="CommentsOrder">
                                                                توضیحات تکمیلی سفارش</label>
                                                            <textarea id="CommentsOrder" class="form-control" name="CommentsOrder" cols="26"
                                                                rows="3"></textarea>
                                                        </div>
                                                        <div class="form-group clearfix">
                                                            <label class="checkbox-inline" for="checkboxes-1">
                                                                <input name="accepted" id="checkboxes-1" checked type="checkbox">
                                                                <a data-toggle="modal" data-dismiss="modal" href="#termsNcondition">قوانین و مقررات
                                                                </a>را مطالعه نموده و با آن موافق هستم
                                                            </label>
                                                        </div>
                                                        <div class="pull-right">
                                                            <button class="btn btn-primary btn-small ">
                                                                سفارش &nbsp; <i class="fa fa-arrow-circle-left"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--/row-->
                            </div>
                        </div>
                    </div>
                    <!--/row end-->
                </div>
                <!--/ cartFooter -->
            </div>
        </div>
        <!--/row end-->
        <div class="col-lg-3 col-md-3 col-sm-12 rightSidebar">
            <div class="w100 cartMiniTable">
                <table id="cart-summary" class="std table">
                    <tbody>
                        <tr>
                            <td>
                                تعداد کل
                            </td>
                            <td class="price">
                                <span id="itemCatrQuantity"></span>&nbsp;عدد
                            </td>
                        </tr>
                        <tr class="cart-total-price ">
                            <td>
                                جمع خرید
                            </td>
                            <td class="price" name="totalAmount">
                                <span id="totalAmount"></span>&nbsp;تومان
                            </td>
                        </tr>
                        <tr style="">
                            <td>
                                هزینه حمل
                            </td>
                            <td class="price">
                                <span class="success" id="sendExpense" name="sendExpense"></span>&nbsp;تومان
                            </td>
                        </tr>
                        <tr style="">
                            <td>
                                تخفیف
                            </td>
                            <td class="price">
                                <span class="success" id="orderDiscount" name="sendExpense"></span>&nbsp;تومان
                            </td>
                        </tr>
                        <tr>
                            <td>
                                جمع کل
                            </td>
                            <td class=" site-color" name="total-price">
                                <span id="total-price">0</span>&nbsp;تومان
                            </td>
                        </tr>
                    </tbody>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
        <!--/rightSidebar-->
        <div class="modal fade" id="termsNcondition" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            &times;</button>
                        <h4 class="modal-title" id="myModalLabel">
                            Modal title</h4>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/row-->
    <div style="clear: both">
    </div>
</div>
<!-- /.main-container -->
<div class="gap">
</div>
