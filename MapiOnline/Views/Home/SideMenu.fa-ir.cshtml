@model MapiOnline.Models.TinyMCE
@{
    ViewBag.Title = Request["name"];
    Layout = "~/Views/Shared/_FirstLayoutNew2.fa-ir.cshtml";
}
@*<div class="breadcrumb">
        <a href="../Home/Index">صفحه اصلی</a> » <span href="" class="last">@Request["name"]</span>
    </div>*@

@if (Model.CanEdit)
{
    <script src="../../../../tinymce/tinymce.min.js" type="text/javascript"></script>
    using (Html.BeginForm())
    {

        @Html.HiddenFor(model => model.menuId)



        <div class="gap"></div>
        <div class="gap"></div>
        <div class="editor-field">
            فولدر عکس: @Model.menuId
            @Html.EditorFor(model => model.Content)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>

    }

}
else
{
    <input type="hidden" id="hdMenuId" value="@Model.menuId" />
    <div class="container main-container headerOffset">
        <div class="row innerPage">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="userInfo">
                    @Html.Raw(Model.Content)
                </div>
            </div>
        </div>
    </div>
}
<div style="clear:both">  </div>
