@model MapiOnline.Models.LogOnModel
@{
    ViewBag.Title = "ورود به سایت";
    Layout = "~/Views/Shared/_FirstLayoutNew2.fa-ir.cshtml";
}

<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">خانه</a> </li>
                <li class="active">عضویت </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h1 class="section-title-inner">
                <span><i class="fa fa-lock"></i>&nbsp;عضویت&nbsp; </span></h1>
            <div class="row userInfo">
                <div class="col-xs-12 col-sm-4" id="ModalSignup">
                    <h2 class="block-title-2">
                        ثبت نام در شیراز رز
                    </h2>
                    <form action="@Url.Action("Register", "Home", new { returnUrl = Request.Url })" id="Frm_MyAccSignUp" method="post">
                    <input name="previousUrl" type="hidden" value="@ViewBag.previousUrl" />
                    <input name="checkOut" type="hidden" value="@Request["checkOut"]" />
                    <div class="form-group">
                        <label>
                            پست الکترونیک</label>
                        <input type="email" class="form-control" placeholder="Enter email" id="reg" name="reg">
                    </div>
                    <div class="form-group">
                        <label>
                            کلمه عیور</label>
                        <input type="password" class="form-control" placeholder="password" id="password"
                            name="password">
                    </div>
                    <div class="form-group">
                        <label>
                            تکرار کلمه عیور</label>
                        <input type="password" class="form-control" placeholder="Password" id="rePassword"
                            name="rePassword">
                    </div>
                    <button type="submit" class="btn   btn-primary" id="btn_MyAccSignUp" name="btn_MyAccSignUp">
                        <i class="fa fa-user"></i>&nbsp;ثبت نام &nbsp;</button>
                    </form>
                </div>
                <div class="col-xs-12 col-sm-4" id="ModalLogin">
                    <h2 class="block-title-2">
                        <span>قبلاٌ در شیراز رز ثبت نام کرده اید؟ وارد شوید</span></h2>
                    <form action="@Url.Action("LogOn", "Account")" method="post" id="Frm_Tshop">
                    <input name="previousUrl" type="hidden" value="@ViewBag.previousUrl" />
                    <input name="checkOut" type="hidden" value="@Request["checkOut"]" />
                    <div class="form-group">
                        <label>
                            پست الکترونیک</label>
                        <input type="email" class="form-control" placeholder="Enter email" name="UserName"
                            id="UserName">
                    </div>
                    <div class="form-group">
                        <label>
                            کلمه عیور</label>
                        <input type="password" class="form-control" placeholder="Password" name="Password"
                            id="Password">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input name="RememberMe" id="RememberMe" type="checkbox" name="checkbox">
                            مرا به خاطر بسپار
                        </label>
                    </div>
                    <div class="form-group">
                        <p>
                            <a title="Recover your forgotten password"  href="@Url.Action("LostPassword", "Account")">
                                رمز عبورم را فراموش کرده‏ ام </a>
                        </p>
                    </div>
                    <button type="submit" class="btn   btn-primary" id="btnlogon" name="btnlogon">
                        <i class="fa fa-sign-in"></i>&nbsp;ورود&nbsp;</button>
                    </form>
                </div>
                <div class="col-xs-12 col-sm-4">
                    <h2 class="block-title-2">
                        <span>اتمام خرید بدون ثبت نام</span></h2>
                    <p>
                        اگر قبلآ ثبت نام نکرده اید و نمی خواهید عضو شیراز رز شوید به عنوان مهمان سفارش خود
                        را به اتمام برسانید!</p>
                    <a href="@Url.Action("CheckOut", "Shopping", new { isGuest = "guest" })" class="btn btn-primary">
                        <i class="fa fa-sign-in"></i>&nbsp;اتمام خرید بدون ثبت نام&nbsp;</a>
                </div>
            </div>
            <!--/row end-->
        </div>
        <div class="col-lg-3 col-md-3 col-sm-5">
        </div>
    </div>
    <!--/row-->
    <div style="clear: both">
    </div>
    <script>
        $(document).ready(function () {
            $('#Frm_MyAccSignUp').bootstrapValidator({
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                fields: {
                    reg: {
                        feedbackIcons: true,
                        validators: {
                            notEmpty: {
                                message: 'پست الکترونیک ضروروی می باشد'
                            }
                        }
                    },

                    password: {
                        feedbackIcons: true,
                        validators: {
                            notEmpty: {
                                message: 'رمز ورود ضروری می باشد'
                            }
                        }
                    }
                      ,
                    rePassword: {
                        feedbackIcons: true,
                        validators: {
                            notEmpty: {
                                message: ' تکرار رمز ورود ضروری می باشد'
                            }
                        }
                    }
                }
            });
        });
    </script>
</div>
<!-- /wrapper -->
