@{
    ViewBag.Title = "ارسال رمز عبور به ایمیل";
    Layout = "~/Views/Shared/_FirstLayoutNew2.fa-ir.cshtml";
}
<div class="breadcrumb">
    <a href="../Home/Index">صفحه اصلی</a> » <a href="../Account/Profile">صفحه شخصی</a>
    » <span class="last">ارسال رمز عبور به ایمیل </span>
</div>
<div class="header">
    <div class="dots">
        <h2>
            ارسال رمز عبور به ایمیل
        </h2>
    </div>
</div>
<div class="box-container">
<div >
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new
    {
        categoryId = Request["categoryId"],
        isNew = Request["isNew"],
        isOffer = Request["isOffer"],
        isSale = Request["isSale"]
    }))
    {
        <ul class="cleaner">
            <li>
                <p style="color: #666666; font-size: 11px;">
                    ایمیل خود را که در سایت ثبت شده است وارد کرده و گزینه "ارسال" را کلیک کنید تا رمز
                    عبور به ایمیل شما ارسال شود.</p>
            </li>
        </ul>
        <ul class="cleaner">
            <li class="unitRight labelParentli80">
                <label>
                    ایمیل</label></li><li class="unitRight inputParentli">
                        <input type="text" name="email" class="usernameInput" />
                        <br />
                        مثال : ali@yahoo.com</li>
            <li class="unitRight"></li>
        </ul>
        <ul class="cleaner">
            <li class="unitRight validationMsgli">
                <label id="sendCodeResult">
                </label>
            </li>
        </ul>
        <ul class="cleaner">
            <li class="unitRight buttonParentli" style="margin-right:50px;">
                <input type="submit" value="ارسال" class="btn btn-success button" /> @Html.ActionLink("بازگشت به صفحه ورود", "LogOn", "Account", new
   {
       categoryId = Request["categoryId"],
       isNew = Request["isNew"],
       isOffer = Request["isOffer"],
       isSale = Request["isSale"]
   })
            </li>
        </ul>
        <ul>
            <li>
                <label style="color: #FF3300; text-align: center; padding-right: 20px; padding-top:5px;">@ViewBag.result</label></li></ul>
    }
    <div>
       
    </div>
</div>
</div>