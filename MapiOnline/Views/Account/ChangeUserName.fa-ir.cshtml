@model MapiOnline.Models.ChangeUsername
@{
    ViewBag.Title = "تغییر ایمیل";
    Layout = "~/Views/Shared/_FirstLayoutNew2.fa-ir.cshtml";
}
<div class="breadcrumb">
    <a href="../Home/Index">صفحه اصلی</a> » <a href="../Account/Profile">صفحه شخصی</a>
    » <span class="last">تغییر ایمیل</span>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="box-container">
    <div class="unitRight">
        @using (Html.BeginForm(new
    {
        categoryId = Request["categoryId"],
        isNew = Request["isNew"],
        isOffer = Request["isOffer"],
        isSale = Request["isSale"]
    }))
        {
            @Html.ValidationSummary(true)
            <ul class="cleaner">
                <li class="unitRight labelParentli80">
                    @Html.LabelFor(model => model.Password)
                </li>
                <li class="unitRight inputParentli">
                    @Html.PasswordFor(model => model.Password, new { @class = "usernameInput" })
                </li>
                <li class="unitRight"></li>
            </ul>
            <ul class="cleaner">
                <li class="unitRight validationMsgli">
                    @Html.ValidationMessageFor(model => model.Password)
                </li>
            </ul>
            <ul class="cleaner">
                <li class="unitRight labelParentli80">
                    @Html.LabelFor(model => model.NewEmail)
                </li>
                <li class="unitRight inputParentli">
                    @Html.TextBoxFor(model => model.NewEmail, new { @class = "usernameInput" })
                </li>
                <li class="unitRight"></li>
            </ul>
            <ul class="cleaner">
                <li class="unitRight validationMsgli">
                    @Html.ValidationMessageFor(model => model.NewEmail)</li>
            </ul>
            <ul class="cleaner">
                <li class="unitRight labelParentli80">
                    @Html.LabelFor(model => model.ConfirmNewEmail)
                </li>
                <li class="unitRight inputParentli">
                    @Html.TextBoxFor(model => model.ConfirmNewEmail, new { @class = "usernameInput" })
                </li>
                <li class="unitRight"></li>
            </ul>
            <ul class="cleaner">
                <li class="unitRight validationMsgli">
                    @Html.ValidationMessageFor(model => model.ConfirmNewEmail)</li>
            </ul>
            <ul class="cleaner">
                <li class="unitRight buttonParentli">
                    <input type="submit" value="ثبت" class="button" /></li>
            </ul>
        }
    </div>
    <br class="clearer" >
</div>
