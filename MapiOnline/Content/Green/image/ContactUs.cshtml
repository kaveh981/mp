@{
    ViewBag.Title = "ارسال پیام";
    Layout = "~/Views/Shared/_FirstLayoutNew2.fa-ir.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        if ('@ViewData["userEmail"]' != null) {
            $("#txt_email").val('@ViewData["userEmail"]');
        }
        if ('@ViewData["userNameFamily"]' != null) {
            $("#txt_name").val('@ViewData["userNameFamily"]');
        }
        $("#btn_send").unbind().click(function () {
            if (validateAll($("#registerForm"))) {
                $.ajax({ type: 'POST',
                    url: "/Home/ContactUs",
                    data: $("form").serialize(),
                    success: function (response) {
                        $("#result").html(response.msg);
                    },
                    dataType: "json"
                });
            }
        });
    })
</script>
